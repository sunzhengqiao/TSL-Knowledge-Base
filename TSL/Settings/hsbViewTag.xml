<?xml version="1.0" encoding="UTF-8"?>
<Hsb_Map>
	<!-- Since version 23 hsbcad is providing painter definitions to filter entities. The filter definitions below are mainly used in previous releases -->
	<!-- Anyhow, using beampacks (identical beams next to each other) still requires a filter rule to be set up, while other filters preferably to be specified by painetr rules-->
	
	<lst nm="FilterRule[]">							<!-- A list of filter rules -->
		<lst nm="FilterRule">							<!-- A filter rule -->
			<int nm="isActive" vl="0"/>					<!-- flags this rule to be 0 = disabled or 1 = enabled -->
			<str nm="Name" vl="Beampack by Type"/>		<!-- The name of the filter rule. A rule will be ignored if a painter definition with the same naming is found -->
			<int nm="Type" vl="1"/>						<!-- An index of the used entity type 0= byZone, 1=Beam, 2=Sheet, 3 = Sip/CLT, 4 = GenBeam, 5 = TSL, 6 = Opening, 7=Door, 8=Window, 9=WindowAssembly, 10 = Truss, 11 = MetalPartCollection, 12 = Massgroup, 13 = Element -->´			
			<lst nm="Format[]">							<!-- A list of format definitions -->
				<lst nm="Format">							<!-- The format definition -->
					<str nm="Format" vl="@(Beamtype)"/>			<!-- The name of the format definition -->
					<str nm="Value" vl="Sill"/>					<!-- The expected return value of the format variable -->
					<int nm="Operation" vl="0"/>				<!-- The operation to be performed if the returned value matches the expression 0 = exclude, 1=include-->
					<int nm="BeamPackFormat" vl="1"/>			<!-- Qualify this rule as beampack definition, 0 = no beampack, 1 = beam pack -->
				</lst>									<!-- end of list -->
			</lst>									<!-- end of list -->
		</lst>				
		<lst nm="FilterRule">
			<int nm="isActive" vl="0"/>				<!-- flags this rule to be 0 = disabled or 1 = enabled.-->
			<str nm="Name" vl="|Only red beams|"/>
			<int nm="Type" vl="1"/>
			<lst nm="Format[]">
				<lst nm="Format">
					<str nm="Format" vl="@(Color)"/>
					<str nm="Value" vl="1"/>
					<int nm="Operation" vl="1"/>
				</lst>
			</lst>
		</lst>
		<lst nm="FilterRule">
			<int nm="isActive" vl="0"/>				<!-- flags this rule to be 0 = disabled or 1 = enabled -->
			<str nm="Name" vl="|Any red color beam|"/>
			<int nm="Type" vl="1"/>
			<dbl nm="SectionOffset" ut="L" vl="0"/>		<!-- specifies an offset of the section line, in conjunction with SectionDepth the entities c be filtered by location/> -->
			<dbl nm="SectionDepth" ut="L" vl="0"/> 		<!-- if the section depth is not given all entities will be shown, a value = 0 means only on section line, value >0 only entities which intersect within this range/>  -->
			<lst nm="Format[]">
				<lst nm="Format">
					<str nm="Format" vl="@(Color)"/>
					<lst nm="Value[]">					<!-- A list of values whre one match is sufficient -->
						<str nm="Value" vl="1"/>
						<str nm="Value" vl="10"/>
					</lst>								<!-- end of list -->
					<int nm="Operation" vl="0"/>
				</lst>
			</lst>
		</lst>			
		<lst nm="FilterRule">
			<int nm="isActive" vl="0"/>					<!-- flags this rule to be 0 = disabled or 1 = enabled -->
			<str nm="Name" vl="|Sherpa|"/>				<!-- The name of the rule which is searching for tsls named sherpa -->
			<int nm="Type" vl="5"/>
			<lst nm="Format[]">
				<lst nm="Format">
					<str nm="Format" vl="@(ScriptName)"/>
					<lst nm="Value[]">
						<str nm="Value" vl="Sherpa"/>		
					</lst>
					<int nm="Operation" vl="1"/>
				</lst>				
			</lst>
		</lst>					
	</lst>
	<lst nm="Style[]">							<!-- A list of styles of different displays -->
		<str nm="BeamPackDelimiter" vl="x"/>	<!-- The default delimter on how beam packs will display, i.e. 3 x 200/100-->
		<lst nm="Style">						<!-- A list of properties for a display style -->
			<int nm="isActive" vl="1"/>				<!-- flags this style to be 0 = disabled or 1 = enabled -->
			<str nm="Name" vl="|Opaque|"/>			<!-- The name of the style presented in OPM -->
			<int nm="Orientation" vl="0"/>			<!-- Optional: The orientation of the tag 0 = byEntity, 1 = horizontal, 2 =vertical   -->
			<str nm="BeamPackDelimiter" vl="x"/>	<!-- Optional: overrides the default BeamPackDelimiter for this style-->
			<lst nm="Background">					<!-- Optional: a list of properties of the background of the badge-->
				<int nm="Color" vl="2"/>				<!-- Optional: specifies the background color of the badge-->
				<int nm="Transparency" vl="-1"/>		<!-- Optional: specifies the transparency of the badge-->
			</lst>									<!-- end of list -->
			<lst nm="Border">						<!-- Optional: a list of  properties of the border of the badge-->
				<int nm="Color" vl="1"/>				<!-- Optional: specifies the border color of the badge-->
			</lst>									<!-- end of list -->
			<lst nm="Leader">						<!-- Optional: a list of  properties of the leader of the badge-->
				<int nm="FactorX" vl="3"/>				<!-- Optional: the factor by which the leader length will be multiplied in X-direction-->
				<int nm="FactorY" vl="2"/>				<!-- Optional: the factor by which the leader length will be multiplied in Y-direction-->
			</lst>									<!-- end of list -->
		</lst>									<!-- end of list -->
		<lst nm="Style">
			<int nm="isActive" vl="0"/>			<!-- flags this style to be 0 = disabled or 1 = enabled -->
			<str nm="Name" vl="|Center|"/>
			<int nm="Orientation" vl="1"/>
			<str nm="BeamPackDelimiter" vl="Stk "/>
			<lst nm="Background">
				<int nm="Color" vl="255"/>
				<int nm="Transparency" vl="60"/>
			</lst>
			<lst nm="Border">
				<int nm="Color" vl="1"/>
				<int nm="Transparency" vl="60"/>
			</lst>	
			<lst nm="Leader">
				<int nm="FactorX" vl="0"/>
				<int nm="FactorY" vl="0"/>
			</lst>			
		</lst>		
	</lst>	
	<lst nm="GeneralMapObject">
		<str nm="Identifier" vl="hsbViewTag"/>	<!-- Do not change! An identifier where these settings apply to -->	
		<int nm="Version" vl="0"/>				<!-- Do not change! The version info provided by hsbcad -->
	</lst>	
	<unit ut="L" uv="millimeter"/>	<!-- The units of the settings -->
	<unit ut="A" uv="radian"/>
</Hsb_Map>
