<?xml version="1.0" encoding="UTF-8"?>
<!-- Guideline to use this xml 
	
	How to build up the allowed classes:
	The settings to build up the Major can be found in the Inventory.db
	You can visualize or edit the Inventory.db by running the hsb_InventoryDB TSL.
	
	When in the Inventory editor go to the 'Items' tab in column 'Minor group',
	you will see how the groups are defined (example: "Boards-Sheet").
	After you defined your major group, you need to define the "AllowedClass" for this group.
	These are the allowed entities you want the user to select for this Major group.
	In this example the user is only allowed to select "EntPLine" and "Circle" for this Major group
	
	Example: 
	
		<lst nm="major">
			<str nm="name" vl="boards-sheet"/>
				<lst nm="allowedclass[]">
					<lst nm="allowedclass">
						<str nm="name" vl="entpline"/>
					</lst>
					<lst nm="allowedclass">
						<str nm="name" vl="circle"/>
					</lst>
			</lst>
		</lst>
		
	In this version of the TSL only these Entities are supported:
	EntPLine, Circle, Roofplane, Sip, Sheet, Openings
-->

<Hsb_Map>
	<!-- Define Major Groups and AllowedClasses:
	-->
	<lst nm="Majors[]">
		<lst nm="Major">
			<str nm="Name" vl="Boards-Sheet"/>
			<lst nm="AllowedClass[]">	
				<lst nm="AllowedClass">
					<str nm="Name" vl="EntPLine"/>
				</lst>
				<lst nm="AllowedClass">
					<str nm="Name" vl="Circle"/>
				</lst>
			</lst>
		</lst>
		<lst nm="Major">
			<str nm="name" vl="Boards-Roofplane"/>
			<lst nm="Allowedclass[]">	
				<lst nm="Allowedclass">
					<str nm="Name" vl="ERoofplane"/>
				</lst>
			</lst>
		</lst>
	</lst>
	<!-- Display Settings:
		Here you can determine how the visualize the items.
		You can set textheight, color, Dimstyle and the size of the mark.
	-->
	<lst nm="Display">
		<dbl nm="TextHeight" ut="L" vl="50"/>
		<int nm="Color" vl="40"/>
		<str nm="DimStyle" vl="Standard"/>
		<dbl nm="MarkSize" ut="L" vl="10"/>
	</lst>
	<!-- Default Settings: 
	-->
	<lst nm="GeneralMapObject">
		<str nm="Identifier" vl="hsbItemToArea"/>
	</lst>
	<unit ut="L" uv="millimeter"/>
	<unit ut="A" uv="radian"/>
</Hsb_Map>
