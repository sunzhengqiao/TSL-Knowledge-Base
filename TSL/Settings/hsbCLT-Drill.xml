<Hsb_Map>
<lst nm="Display[]">
    <!-- Specify general dimstyles, colors, textheights etc
	One can override individual values for each face type
	Face types are:
		0 = reference face
		1 = top face
		2 = edge face
	-->
	<str nm="DimStyle" vl="Standard"/>			<!-- Specifies the dimstyle of a potential description -->
	<dbl nm="TextHeight" ut="L" vl="60"/>		<!-- Specifies the text height as an override to the textheight of the dimstyle -->
	<int nm="Transparency" vl="90"/>			<!-- Specifies the global transparency -->	
	<int nm="ColorMismatch" vl="1"/>			<!-- Specifies the symbol color -->	
	<int nm="TransparencyMismatch" vl="40"/>	<!-- Specifies an override of the transparency -->
	<lst nm="Display">	<!-- Specifies parameters of the reference face display -->
		<int nm="Face" vl="0"/>					<!-- Assigns this display to be the reference face definition -->
		<int nm="Color" vl="3"/>				<!-- Specifies the symbol color -->	
		<int nm="Transparency" vl="80"/>		<!-- Specifies an override of the transparency -->
	</lst>
	<lst nm="Display">	<!-- Specifies parameters of top face the display -->
		<int nm="Face" vl="1"/>					<!-- Assigns this display to be the top face definition -->
		<int nm="Color" vl="4"/>				<!-- Specifies the symbol color -->		
	</lst>
	<lst nm="Display">	<!-- Specifies parameters of edge face the display -->
		<int nm="Face" vl="2"/>					<!-- Assigns this display to be the edge face definition -->
		<int nm="Color" vl="6"/>				<!-- Specifies the symbol color -->	
	</lst>	
</lst>
<lst nm="Tool[]">
	<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled. NOTE: if this is disabled all tool definitions are disabled.-->
    <!-- Specify properties of tools: diameters, incline, max length, display overrides etc
	Once this definition is in place all tools which do not match with one of the entries will fall back to the mismatch display unless the flag isActive is set to 0
	-->
	
	<lst nm="Tool">		<!-- Specification of a tool -->
		<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled-->
		<lst nm="Face[]">					<!-- Optional: a list of applicable faces where this tool can operate, Default: all faces -->
			<int nm="Face" vl="0"/>					<!-- the tool is applicable for the reference face (0) -->
			<int nm="Face" vl="1"/>					<!-- the tool is applicable for the top face (1) -->
		</lst>
		<lst nm="Diameter[]">				<!-- Optional: a list of applicable diameters -->
			<dbl nm="Diameter" ut="L" vl="8"/>	
			<dbl nm="Diameter" ut="L" vl="10"/>
			<dbl nm="Diameter" ut="L" vl="12"/>
			<dbl nm="Diameter" ut="L" vl="14"/>
			<dbl nm="Diameter" ut="L" vl="16"/>
			<dbl nm="Diameter" ut="L" vl="18"/>	
			<dbl nm="Diameter" ut="L" vl="20"/>
			<dbl nm="Diameter" ut="L" vl="22"/>
			<dbl nm="Diameter" ut="L" vl="24"/>
			<dbl nm="Diameter" ut="L" vl="26"/>	
			<dbl nm="Diameter" ut="L" vl="28"/>
			<dbl nm="Diameter" ut="L" vl="30"/>		
		</lst>		
		<dbl nm="MaxLength" ut="L" vl="300"/>		<!-- Optional: Specifies the max length of the drill tool -->	
		<!-- NOTE: One can specify an override of the display with the same syntax as for DISPLAY[] -->
	</lst>
	<lst nm="Tool">		<!-- Specification of a tool -->
		<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled-->
		<lst nm="Face[]">	<!-- Optional: a list of applicable faces where this tool can operate, Default: all faces -->
			<int nm="Face" vl="0"/>					<!-- the tool is applicable for the reference face (0) -->
			<int nm="Face" vl="1"/>					<!-- the tool is applicable for the top face (1) -->
		</lst>	
		<dbl nm="Diameter" ut="L" vl="30"/>		<!-- Specifies the diameter of this tool -->	
		<dbl nm="MaxLength" ut="L" vl="250"/>		<!-- Optional: Specifies the max length of the drill tool -->	
		<int nm="IsInclinable" vl="1"/>				<!-- the tool is inclinable and can be used for beveled or rotated drills -->
	</lst>
	<lst nm="Tool">		<!-- Specification of a tool -->
		<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled-->
		<int nm="Face" vl="2"/>					<!-- the tool is applicable for the edge face (2) -->	
		<dbl nm="Diameter" ut="L" vl="30"/>		<!-- Specifies the diameter of this tool -->	
		<dbl nm="MaxLength" ut="L" vl="1500"/>		<!-- Optional: Specifies the max length of the drill tool -->	
		<int nm="IsInclinable" vl="0"/>				<!-- the tool is inclinable (1) and can be used for beveled or rotated drill, Default: 0 = not inclinable -->
		<int nm="Color" vl="50"/>				<!-- Specifies the symbol color -->	
	</lst>	
	<lst nm="Tool">		<!-- Specification of a tool -->
		<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled-->
		<int nm="Face" vl="2"/>					<!-- the tool is applicable for the edge face (2) -->	
		<dbl nm="Diameter" ut="L" vl="30"/>		<!-- Specifies the diameter of this tool -->	
		<dbl nm="MaxLength" ut="L" vl="1200"/>		<!-- Optional: Specifies the max length of the drill tool -->	
		<int nm="IsInclinable" vl="1"/>				<!-- the tool is inclinable (1) and can be used for beveled or rotated drill, Default: 0 = not inclinable -->
		<int nm="Color" vl="41"/>				<!-- Specifies the symbol color -->	
	</lst>	
	<lst nm="Tool">	
		<int nm="isActive" vl="0"/>			<!-- Optional: 0 = disabled, 1 = enabled, default = enabled-->
		<dbl nm="Diameter" ut="L" vl="14"/>		<!-- Specifies the diameter of this tool -->	
		<dbl nm="MaxLength" ut="L" vl="1200"/>	<!-- Specifies the max length of the drill tool -->		
		<int nm="Face" vl="2"/>	
		<int nm="Color" vl="5"/>				<!-- Specifies the symbol color -->	
		<int nm="Transparency" vl="80"/>		<!-- Specifies an override of the transparency -->		
	</lst>	
</lst>
<lst nm="GeneralMapObject">
		<str nm="Identifier" vl="hsbCLT-Drill"/>
	</lst>
<unit ut="L" uv="millimeter"/>
<unit ut="A" uv="radian"/>
</Hsb_Map>



